<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GoComix" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_400</item>
        <item name="colorSecondaryVariant">#000</item>
        <item name="colorSecondaryContainer">@color/purple_800</item>
        <item name="colorOnSecondary">@color/purple_900</item>
        <item name="android:navigationBarColor">@color/purple_900</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_800</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple_800</item>
    </style>

    <style name="RoundRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="RoundRatingBar.Small" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_item_small</item>
        <item name="android:minHeight">@dimen/star_small_size</item>
        <item name="android:minWidth">@dimen/star_small_size</item>
    </style>

    <style name="RoundRatingBar.Large" parent="RoundRatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_item_large</item>
        <item name="android:minHeight">@dimen/star_large_size</item>
        <item name="android:minWidth">@dimen/star_large_size</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/plain_text</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="Text.Shadowed" parent="Text">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">@dimen/title_shadow_d</item>
        <item name="android:shadowDy">@dimen/title_shadow_d</item>
        <item name="android:shadowRadius">@dimen/title_shadow_radius</item>
    </style>

    <style name="Text.Shadowed.Content" parent="Text.Shadowed">
        <item name="android:textColor">@color/inverse_accent_text</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/accent_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">@dimen/title_letter_spacing</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Title.Shadowed" parent="Title">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">@dimen/title_shadow_d</item>
        <item name="android:shadowDy">@dimen/title_shadow_d</item>
        <item name="android:shadowRadius">@dimen/title_shadow_radius</item>
    </style>

    <style name="Title.Shadowed.Content" parent="Title.Shadowed">
        <item name="android:textColor">@color/inverse_accent_text</item>
    </style>

    <style name="Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Fogging">
        <item name="android:background">@color/fogging</item>
    </style>
</resources>
