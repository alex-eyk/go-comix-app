<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GoComix" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/plain_text</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="Text.Shadowed" parent="Text">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">@dimen/title_shadow_d</item>
        <item name="android:shadowDy">@dimen/title_shadow_d</item>
        <item name="android:shadowRadius">@dimen/title_shadow_radius</item>
    </style>

    <style name="Text.Shadowed.Content" parent="Text.Shadowed">
        <item name="android:textColor">@color/inverse_accent_text</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/accent_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">@dimen/title_letter_spacing</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Title.Shadowed" parent="Title">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">@dimen/title_shadow_d</item>
        <item name="android:shadowDy">@dimen/title_shadow_d</item>
        <item name="android:shadowRadius">@dimen/title_shadow_radius</item>
    </style>

    <style name="Title.Shadowed.Content" parent="Title.Shadowed">
        <item name="android:textColor">@color/inverse_accent_text</item>
    </style>

    <style name="Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Fogging">
        <item name="android:background">@color/fogging</item>
    </style>
</resources>
