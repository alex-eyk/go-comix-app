<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph.xml"
        app:startDestination="@id/navigation_splash">

    <fragment
            android:id="@+id/navigation_splash"
            android:name="com.team.seven.gocomix.ui.splash.SplashFragment"
            android:label="Splash"
            tools:layout="@layout/fragment_splash" />

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.team.seven.gocomix.ui.home.HomeFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home" />

    <fragment
            android:id="@+id/navigation_favourite"
            android:name="com.team.seven.gocomix.ui.favourite.FavouriteFragment"
            android:label="Favourite" />


    <fragment
            android:id="@+id/navigation_profile"
            android:name="com.team.seven.gocomix.ui.profile.ProfileFragment"
            android:label="Profile"
            tools:layout="@layout/fragment_profile">

        <action
                android:id="@+id/action_navigation_profile_to_profileEditFragment"
                app:destination="@id/profileEditFragment" />
        <action
                android:id="@+id/action_navigation_profile_to_navigation_sign_in"
                app:destination="@id/navigation_sign_in"
                app:popUpToInclusive="true"
                app:popUpTo="@id/navigation_profile" />
    </fragment>

    <fragment
            android:id="@+id/profileEditFragment"
            android:name="com.team.seven.gocomix.ui.profileEdit.ProfileEditFragment"
            android:label="profile_edit_fragment"
            tools:layout="@layout/profile_edit_fragment" >

        <action
                android:id="@+id/action_profileEditFragment_to_navigation_profile"
                app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
            android:id="@+id/navigation_sign_in"
            android:name="com.team.seven.gocomix.ui.auth.signin.SignInFragment"
            android:label="Login"
            tools:layout="@layout/fragment_sign_in" >
        <action
                android:id="@+id/action_navigation_sign_in_to_navigation_home"
                app:destination="@id/navigation_home" />
    </fragment>

</navigation>
